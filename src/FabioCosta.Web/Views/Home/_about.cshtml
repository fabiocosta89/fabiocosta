@{
    // Calculation of my time experience in years
    TimeSpan experienceYearsSpan = DateTime.Today - (new DateTime(2014, 7, 1, 0, 0, 0, DateTimeKind.Local));
    int totalYears = (int)experienceYearsSpan.TotalDays / 365;
}

<section class="about section-padding pb-0" id="about">
    <div class="container">
        <div class="row">

            <div class="col-lg-7 mx-auto col-md-10 col-12">
                <div class="about-info">

                    <h2 class="mb-4" data-aos="fade-up">About <strong>me</strong></h2>

                    <p class="mb-0" data-aos="fade-up">
                        I am currently working as a <a href="#curriculum" class="smoothScroll"><strong>Fullstack</strong></a> Developer, using the 
                        <a href="#curriculum" class="smoothScroll"><strong>.NET</strong></a> framework. I have over @(totalYears) years of experience in web development.
                        <br><br>IT was my <strong>passion</strong> since I was little, where I spent my days trying to find how everything worked.
                    </p>
                </div>

                <div class="about-image" data-aos="fade-up" data-aos-delay="200">
                    <img src="images/home/office.png" class="img-fluid" alt="office" width="530" height="250">
                </div>
            </div>

        </div>
    </div>
</section>