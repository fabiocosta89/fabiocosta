@model StandardPost
@{
    ViewData["Title"] = !string.IsNullOrEmpty(Model.MetaTitle) ? Model.MetaTitle : Model.Title;
    ViewData["Description"] = "This is my blog. You can find some of my thougths in here.";

    var hasImage = Model.PrimaryImage.HasValue;
    var archive = await WebApp.Api.Pages.GetByIdAsync(Model.BlogId);
}

@section Scripts {
    <script async src="~/js/bundleSite.js" asp-append-version="true"></script>
}

@section head {
    @WebApp.MetaTags(Model)
}

<!-- Post -->
<section class="project-detail section-padding-half">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 mx-auto col-md-10 col-12 mt-lg-5 text-center" data-aos="fade-up">
                <h4 class="blog-category text-info">@Model.Category.Title</h4>
                <h1>@Model.Title</h1>
                <div class="client-info">
                    <div class="d-flex justify-content-center align-items-center mt-3">
                        <img src="/images/shared/male-avatar.png" class="img-fluid" alt="male avatar"
                             width="100" height="92">
                        <p>Fábio Costa</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Post Image -->
@if (hasImage)
{
    <div class="full-image text-center" data-aos="zoom-in">
        <img src=@Url.Content(WebApp.Media.ResizeImage(Model.PrimaryImage, 500)) class="img-fluid" alt="blog header" width="500" height="500">
    </div>
}

<!-- Post Content -->
<section class="project-detail">
    <div class="container">
        <div class="col-lg-9 mx-auto col-md-11 col-12 my-5 pt-3" data-aos="fade-up">
            @foreach (var block in Model.Blocks)
            {
                <div class="row block @block.CssName()">
                    <div class="container">
                        @Html.DisplayFor(m => block, block.GetType().Name)
                    </div>
                </div>
            }
        </div>
    </div>
</section>