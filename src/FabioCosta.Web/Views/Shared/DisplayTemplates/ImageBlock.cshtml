@model Piranha.Extend.Blocks.ImageBlock

<figure>
    <img src="@Url.Content(WebApp.Media.ResizeImage(Model, Model.Body.Media.Width.Value))" alt="@Model.Body.Media.AltText" title="@Model.Body.Media.Title"
         width="@Model.Body.Media.Width" height="@Model.Body.Media.Height" class="img-fluid" loading="lazy">
    <figcaption><i>@Model.Body.Media.Description</i></figcaption>
</figure>