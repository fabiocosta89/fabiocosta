@{
    ViewData["Title"] = "Version Log";
    ViewData["Description"] = "This is where you can see the evolution of this website. A lot of work invested :D";
}

@section Scripts {
    <script async src="~/js/bundleSite.js" asp-append-version="true"></script>
}

<!-- Version Log Content -->
<section class="project-detail">
    <div class="container">
        <div class="row">

            <div class="col-lg-9 mx-auto col-md-10 col-12 mt-lg-5 text-center" data-aos="fade-up">
                <h4 class="blog-category">Version Log</h4>
                <h1>The Evolution of this Website</h1>

                <div class="client-info">
                    <div class="d-flex justify-content-center align-items-center mt-3">
                        <img src="images/shared/male-avatar.png" class="img-fluid" alt="male avatar">

                        <p>Fábio Costa</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-9 mx-auto col-md-11 col-12 my-5 pt-3" data-aos="fade-up" data-aos-delay="100">
